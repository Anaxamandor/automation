import paramiko

# Prompt the user for their username and password
username = input("Enter your username: ")
password = input("Enter your password: ")

# Read the list of device IPs from a file
with open('device_ips.txt', 'r') as f:
    device_ips = [line.strip() for line in f]

# Create a new SSH client
ssh = paramiko.SSHClient()

# Automatically add the target device's SSH key to the list of known hosts
ssh.set_missing_host_key_policy(paramiko.AutoAddPolicy())

# Connect to each device in turn
for device_ip in device_ips:
    try:
        ssh.connect(device_ip, username=username, password=password)
        stdin, stdout, stderr = ssh.exec_command('show version')
        print(f"Connected to {device_ip}:\n{stdout.read().decode()}")
        ssh.close()
    except paramiko.AuthenticationException:
        print(f"Authentication failed for {device_ip}")
    except paramiko.SSHException as ssh_exception:
        print(f"Unable to establish SSH connection to {device_ip}: {ssh_exception}")

# Close the SSH client
ssh.close()
