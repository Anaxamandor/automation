tasks:
  - name: create file
    lineinfile:
      path: /thepath/
      line: "test"
      state: present
      create: yes

  - name: read file
    slurp:
      src: /thepath/
    register: result

  - name: display result (unencoded)
    debug:
      var: result.content

  - name: display result (decoded)
    debug:
      var: result.content | b64decode
